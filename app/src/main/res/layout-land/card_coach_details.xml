<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_card_coach_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    tools:context="com.example.ilyab.section_4_my_profie_main_menu.Training_pckg.workout_by_coach.CardCoachDetails">

    <TextView
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:textSize="20sp"

        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="#f4f0f0"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/coach_avatar_card"
            android:foregroundGravity="center"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/name_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:text="Name:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/name_coach_profile"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:hint="Coach name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout

            android:id="@+id/degree_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:text="Degree:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/degree_coach_profile"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:hint="Coach degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout

            android:id="@+id/specialization_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"/>

            <TextView
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:text="Specialization:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/specialization_coach_profile"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:hint="Coach specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/coach_personal_info_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Personal info:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:hint="Personal info about the coach from data-base Personal info about the coach from data-base Personal info about the coach from data-basePersonal info about the coach from data-base
                "
android:id="@+id/coach_personal_info_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--<LinearLayout-->
                <!--android:weightSum="2"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
                <!--<Button-->
                    <!--android:layout_margin="20dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:id="@+id/btn_back_to_list_coach"-->
                    <!--android:text="Back"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"/>-->
                <!--<Button-->
                    <!--android:layout_margin="20dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:id="@+id/btn_save_coach"-->
                    <!--android:text="SAVE"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--&lt;!&ndash;android:layout_height="wrap_content"/>&ndash;&gt;-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>