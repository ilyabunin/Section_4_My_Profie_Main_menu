<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:background="#3b0e75"
        android:id="@+id/container_main_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vip_layout">

    </FrameLayout>
    <LinearLayout
        android:background="#ffffff"
        android:weightSum="2"
        android:id="@+id/vip_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout

            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:text="Want more? Become VIP:"

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:background="#fff"
                android:src="@drawable/ic_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vip_button_start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:id="@+id/users_login"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:hint="Your Login"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:id="@+id/users_coach"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:hint="Your coach"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:id="@+id/users_status"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:hint="Your status"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/vip_layout"
        android:orientation="vertical"
        android:id="@+id/no_coach_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
android:fontFamily="monospace"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:text="Oh no..."
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/ic_sad"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
        <TextView
            android:layout_marginTop="10dp"
android:fontFamily="sans-serif-light"

android:gravity="center"
            android:textColor="#ffff"
            android:text="@string/work_out_no_coach_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_get_coach"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Get Coach >"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>