<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/category_value_name6_2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#1c4bc2"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textSize="22sp"/>

            <ListView
                android:id="@+id/categories_map6_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:gravity="center">

            <Button
                android:visibility="gone"
                android:id="@+id/add_to_workout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="addtowork"
                android:text="ADD TO WORKOUT"/>
            <Button
                android:visibility="gone"
                android:id="@+id/delete_workout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="DELETE WORKOUT"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>