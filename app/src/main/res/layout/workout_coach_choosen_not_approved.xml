<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:background="#03762f"
        android:id="@+id/container_main_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vip_layout">

    </FrameLayout>
    <LinearLayout
        android:background="#ffffff"
        android:weightSum="2"
        android:id="@+id/vip_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout

            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:text="Want more? Become VIP:"

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:background="#fff"
                android:src="@drawable/ic_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vip_button_start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:id="@+id/users_login"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:hint="Your Login"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:id="@+id/users_coach"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:hint="Your coach"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:id="@+id/users_status"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:hint="Your status"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/no_coach_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
android:fontFamily="monospace"
android:layout_gravity="center"
android:gravity="center"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:text="We've got your request!"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
        android:layout_marginBottom="20dp"

        android:fontFamily="sans-serif-light"

        android:gravity="center"
        android:textColor="#ffff"
        android:text="You've chosen:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <TextView
            android:layout_marginBottom="20dp"
android:textSize="15sp"
            android:fontFamily="sans-serif-light"
android:id="@+id/coach_name_chosen_not_approved"
            android:gravity="center"
            android:textColor="#ffff"
           android:hint="Coach Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/coach_image_chosen_not_approved"
        android:src="@drawable/ic_thumb_up"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
        <TextView
            android:layout_marginBottom="20dp"

            android:fontFamily="sans-serif-light"

            android:gravity="center"
            android:textColor="#ffff"
            android:text="Please wait for approving by coach.. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_approve_message"/>

    </LinearLayout>
</RelativeLayout>