<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_exercise_name_6_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_exercise_6_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/linear_exercise_name_6_3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/exercise_image"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/txt_description_in_exercise1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Блок с описанием упражнения"
            android:layout_weight="1"
            android:textSize="32sp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>