<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_exercises_choose"
              android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/first_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chk_select_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Select All"
            android:textSize="22dp" />


        <Button
            android:id="@+id/btn_delete_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Delete All"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycler_view_choose_exercises"
        android:layout_width="match_parent"
        android:layout_height="379dp"

        android:scrollbars="none"/>

    <LinearLayout

        android:id="@+id/second_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
android:id="@+id/btn_save_exercises_to_trainig"
            android:textSize="14dp"
            android:textColorHint="#ffff"
            android:textColor="#ffffff"
            android:hint="ADD TO TRAINING"
            android:background="#42c81d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>


